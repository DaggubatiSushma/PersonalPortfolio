
<%- include ('partials/head') %> 
<body>

  <%- include ('partials/header') %>


  <main id="main">

    <section id="contact" class="contact">
      <div class="container">

        <div class="section-title">
          <h2>Contact</h2>
           </div>

        <div class="row">

          <div class="col-lg-6">

            <div class="row">
              <div class="col-md-12">
                <div class="info-box">
                  <i class="bx bx-share-alt"></i>
                  <h3>Social Profiles</h3>
                  <div class="social-links">
                    <a href="https://www.twitter.com/" class="twitter"><i class="icofont-twitter"></i></a>
                    <a href="https://www.facebook.com/" class="facebook"><i class="icofont-facebook"></i></a>
                    <a href="https://www.instagram.com/" class="instagram"><i class="icofont-instagram"></i></a>
                    <a href="https://www.linkedin.com/" class="linkedin"><i class="icofont-linkedin"></i></a>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box mt-4">
                  <i class="bx bx-envelope"></i>
                  <h3>Email Me</h3>
                  <p>sushmadaggubati97@gmail.com</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box mt-4">
                  <i class="bx bx-phone-call"></i>
                  <h3>Call Me</h3>
                  <p>+91 9908430506</p>
                </div>
              </div>
            </div>

          </div>

          <div class="col-lg-6">
            <form action="/contact" method="post" role="form" novalidate>
              <div class="form-row">
                <div class="col-md-6 form-group">
                  <input type="text" name="name" class="form-control <%= errors.name ? 'form-field-invalid' : '' %>" id="name" placeholder="Your Name" value="<%= data.name %>" />
                  <% if (errors.name) { %>
                    <div class="error"><%= errors.name.msg %></div>
                  <% } %>
                </div>
                <div class="col-md-6 form-group">
                  <input type="email" class="form-control <%= errors.email ? 'form-field-invalid' : '' %> " name="email" id="email" placeholder="Your Email" value="<%= data.email %>"  />
                  <% if (errors.email) { %>
                    <div class="error"><%= errors.email.msg %></div>
                  <% } %>
                </div>
              </div>
              <div class="form-group">
                <input type="text" class="form-control <%= errors.subject ? 'form-field-invalid' : '' %>" name="subject" id="subject" placeholder="Subject" value="<%= data.subject %>"/>
                <% if (errors.subject) { %>
                  <div class="error"><%= errors.subject.msg %></div>
                <% } %>
              </div>
              <div class="form-group">
                <textarea class="form-control <%= errors.message ? 'form-field-invalid' : '' %>" name="message" rows="6"  placeholder="Message" autofocus><%= data.message %></textarea>
                <% if (errors.message) { %>
                  <div class="error"><%= errors.message.msg %></div>
                <% } %>
              </div>
              <div class="text-center"><button type="submit">Send Message</button></div>
            </form>
            <% if (messages.success) { %>
              <div class="flash flash-success"><%= messages.success %></div>
            <% } %>
          </div>

        </div>

      </div>
    </section>

  </main>


</body>
<%- include ('partials/footer') %>
<%- include ('partials/scripts') %>